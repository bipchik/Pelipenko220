<Page x:Class="Pelipenko220.Pages.Tables"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pelipenko220.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tables">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="Books" Grid.Row="0" Content="Книги" HorizontalAlignment="Center" VerticalAlignment="Center" Height="34" Width="114" FontSize="16" Click="Books_Click"/>
        <Button x:Name="Authors" Grid.Row="1" Content="Авторы" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="34" FontSize="16" Click="Authors_Click"/>
        <Button x:Name="GiveBooks" Grid.Row="2" Content="Выдача книги" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="34" FontSize="16" Click="GiveBooks_Click"/>

    </Grid>
</Page>
